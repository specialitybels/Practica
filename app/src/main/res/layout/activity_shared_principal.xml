<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.danielo.practica.SharedPrefernces.SharedPrincipal"
    android:columnCount="5"
    android:rowCount="6"
    android:background="@android:color/background_light">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/pantalla"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnSpan="4"
        android:gravity="center_vertical|right"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="7"
        android:id="@+id/siete"
        android:layout_row="1"
        android:layout_column="1"
        android:onClick="clickBotonNum"
        />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="8"
        android:id="@+id/ocho"
        android:layout_row="1"
        android:layout_column="2"
        android:onClick="clickBotonNum"
        />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="9"
        android:id="@+id/nou"
        android:layout_row="1"
        android:layout_column="3"
        android:onClick="clickBotonNum"
        />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="4"
        android:id="@+id/cuatro"
        android:layout_row="2"
        android:layout_column="1"
        android:onClick="clickBotonNum"
        />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="5"
        android:id="@+id/cinco"
        android:layout_row="2"
        android:layout_column="2"
        android:onClick="clickBotonNum"
        />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="6"
        android:id="@+id/seis"
        android:layout_row="2"
        android:layout_column="3"
        android:onClick="clickBotonNum"
       />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="-"
        android:id="@+id/resta"
        android:layout_row="2"
        android:layout_column="4"
        android:onClick="clickOperador"
        />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="1"
        android:id="@+id/uno"
        android:layout_row="3"
        android:layout_column="1"
        android:onClick="clickBotonNum"
       />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="2"
        android:id="@+id/dos"
        android:layout_row="3"
        android:layout_column="2"
        android:onClick="clickBotonNum"
         />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="3"
        android:id="@+id/tres"
        android:layout_row="3"
        android:layout_column="3"
        android:onClick="clickBotonNum"
        />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="*"
        android:id="@+id/multiplicacio"
        android:layout_row="3"
        android:layout_column="4"
        android:onClick="clickOperador"
        />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="0"
        android:id="@+id/cero"
        android:layout_row="4"
        android:layout_column="1"
        android:onClick="clickBotonNum"
       />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="C"
        android:id="@+id/clean"
        android:layout_row="4"
        android:layout_column="2"
        android:onClick="clickClean"
        />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="="
        android:id="@+id/igual"
        android:layout_row="4"
        android:layout_column="3"
        android:onClick="clickIgual"
         />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="+"
        android:id="@+id/suma"
        android:layout_row="1"
        android:layout_column="4"
        android:onClick="clickOperador"
       />

    <Button
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:text="/"
        android:id="@+id/divisio"
        android:layout_row="4"
        android:layout_column="4"
        android:onClick="clickOperador"
      />

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="RECUPERAR"
        android:id="@+id/btnRecuperar"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_columnSpan="2"

        android:onClick="recuperar" />

    <Button
        android:text="Volver"
        android:layout_height="wrap_content"
        android:id="@+id/btnVolver"
        android:layout_row="5"
        android:layout_column="3" />

</GridLayout>
